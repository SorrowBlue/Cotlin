<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/list_navigation"
	app:startDestination="@id/folderListFragment">

	<fragment
		android:id="@+id/folderListFragment"
		android:name="com.sorrowblue.cotlin.list.FolderListFragment"
		android:label="@string/app_name">
		<action
			android:id="@+id/action_folderListFragment_to_fileListFragment"
			app:destination="@id/fileListFragment"
			app:exitAnim="@android:anim/fade_out"
			app:launchSingleTop="true" />
	</fragment>
	<fragment
		android:id="@+id/fileListFragment"
		android:name="com.sorrowblue.cotlin.list.FileListFragment"
		android:label="フォルダ名">
		<argument
			android:name="folder"
			app:argType="com.sorrowblue.cotlin.list.Folder" />
		<argument
			android:name="position"
			app:argType="integer" />
		<action
			android:id="@+id/action_fileListFragment_to_imageFragment"
			app:destination="@id/imageFragment" />
	</fragment>
	<fragment
		android:id="@+id/imageFragment"
		android:name="com.sorrowblue.cotlin.list.ImageFragment"
		android:label="画像名">
		<argument
			android:name="uri"
			app:argType="android.net.Uri" />
		<argument
			android:name="position"
			app:argType="integer" />
	</fragment>
</navigation>
